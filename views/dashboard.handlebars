<h2 class="dash"> Your Dashboard</h2>
<section>
    <h3 class="dashboard"> Create New Post</h3>
    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-body">Content</label>
            <input type="text" id="post-body" name="post-body" />
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h3 class="dashboard"> Your posts</h3>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>